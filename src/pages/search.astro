---
import Layout from '../layouts/Layout.astro'
---

<Layout title="Search Episodes - The Web Talk Show">
  <div class="max-w-4xl mx-auto px-4 py-12 text-center">
    <h1 class="text-3xl font-bold mb-4">Search Episodes</h1>
    <p class="text-slate-600 mb-8">Press <kbd class="px-2 py-1 bg-slate-100 rounded border border-slate-200 text-sm">âŒ˜K</kbd> or click the button below to search</p>
    <button 
      type="button"
      onclick="openSearch()"
      class="inline-flex items-center gap-2 px-6 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors font-medium"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
      </svg>
      Open Search
    </button>
  </div>
</Layout>

<script>
  // Auto-open search modal when visiting this page directly
  if (typeof openSearch === 'function') {
    openSearch();
  } else {
    // Wait for the function to be available
    window.addEventListener('load', () => {
      setTimeout(() => {
        if (typeof (window as any).openSearch === 'function') {
          (window as any).openSearch();
        }
      }, 100);
    });
  }
</script>
