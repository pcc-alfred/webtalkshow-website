---
import Layout from '../layouts/Layout.astro'
import EpisodeCard from '../components/EpisodeCard.astro'
import { getCollection } from 'astro:content'

const allEpisodes = await getCollection('episodes')
const episodes = allEpisodes
  .sort((a, b) => b.data.number - a.data.number)

const latestEpisode = episodes[0]
const recentEpisodes = episodes.slice(0, 8)

// Extract YouTube video ID and create thumbnail URL
function getYouTubeThumbnail(youtubeUrl: string | undefined): string | null {
  if (!youtubeUrl) return null
  const match = youtubeUrl.match(/(?:youtube\.com\/watch\?v=|youtu\.be\/)([^&]+)/)
  return match ? `https://img.youtube.com/vi/${match[1]}/maxresdefault.jpg` : null
}

const latestThumbnail = getYouTubeThumbnail(latestEpisode?.data.youtubeUrl)
---

<Layout title="The Web Talk Show - Behind-the-Scenes of Tech & Business" transparentHeader={true}>

  <!-- ═══ HERO: Now Playing ═══ -->
  <section class="relative min-h-screen flex items-end pb-16 sm:pb-24 overflow-hidden">
    <!-- Background thumbnail -->
    {latestThumbnail && (
      <div class="absolute inset-0">
        <img 
          src={latestThumbnail} 
          alt=""
          class="w-full h-full object-cover"
          loading="eager"
        />
        <!-- Gradient overlays -->
        <div class="absolute inset-0 bg-gradient-to-t from-[#0a0a0a] via-[#0a0a0a]/70 to-[#0a0a0a]/30"></div>
        <div class="absolute inset-0 bg-gradient-to-r from-[#0a0a0a]/60 to-transparent"></div>
      </div>
    )}
    {!latestThumbnail && (
      <div class="absolute inset-0 bg-gradient-to-br from-[#0a0a0a] via-[#1a1a1a] to-[#0a0a0a]"></div>
    )}
    
    <!-- Noise texture overlay -->
    <div class="absolute inset-0 noise-overlay pointer-events-none"></div>
    
    <!-- Content -->
    <div class="relative z-10 max-w-6xl mx-auto px-4 sm:px-6 w-full">
      {latestEpisode && (
        <div class="max-w-3xl">
          <!-- Label -->
          <div class="flex items-center gap-3 mb-4" style="animation: fadeInUp 0.6s ease-out both; animation-delay: 0.1s;">
            <span class="inline-flex items-center gap-2 text-xs font-semibold uppercase tracking-[0.15em] text-[#e63329]">
              <span class="w-2 h-2 rounded-full bg-[#e63329] animate-pulse"></span>
              Latest Episode
            </span>
            <span class="text-white/20">·</span>
            <span class="text-white/40 text-sm">#{latestEpisode.data.number}</span>
            <span class="text-white/20">·</span>
            <span class="text-white/40 text-sm">{latestEpisode.data.duration}</span>
          </div>
          
          <!-- Title -->
          <h1 
            class="font-[var(--font-display)] font-extrabold text-white leading-[1.05] mb-5"
            style="font-size: clamp(2.2rem, 5vw, 4.2rem); animation: fadeInUp 0.6s ease-out both; animation-delay: 0.2s;"
          >
            {latestEpisode.data.title}
          </h1>
          
          <!-- Description -->
          <p 
            class="text-[#d4d4d4]/80 text-lg sm:text-xl leading-relaxed mb-8 line-clamp-2 max-w-2xl"
            style="animation: fadeInUp 0.6s ease-out both; animation-delay: 0.3s;"
          >
            {latestEpisode.data.description}
          </p>
          
          <!-- Play button + platforms -->
          <div class="flex flex-wrap items-center gap-4 mb-6" style="animation: fadeInUp 0.6s ease-out both; animation-delay: 0.4s;">
            <!-- Play button -->
            <a 
              href={`/episodes/${latestEpisode.id}`}
              class="inline-flex items-center gap-3 px-6 py-3 bg-[#e63329] hover:bg-[#c42a22] text-white font-semibold rounded-full transition-all duration-300 hover:scale-105 hover:shadow-[0_0_30px_rgba(230,51,41,0.3)] group"
            >
              <svg class="w-5 h-5 group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 24 24">
                <path d="M8 5v14l11-7z"/>
              </svg>
              Watch Now
            </a>
            
            <!-- Platform pills -->
            <div class="flex items-center gap-2">
              <a href="https://open.spotify.com/show/00BTCbkMIG7mjeTP9zlsIq" target="_blank" rel="noopener" class="platform-pill bg-[#1DB954]/15 text-[#1DB954] hover:bg-[#1DB954]/25" aria-label="Listen on Spotify">
                <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/>
                </svg>
              </a>
              <a href="https://podcasts.apple.com/us/podcast/the-web-talk-show/id1822997923" target="_blank" rel="noopener" class="platform-pill bg-[#fc3c44]/15 text-[#fc3c44] hover:bg-[#fc3c44]/25" aria-label="Listen on Apple Podcasts">
                <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
                </svg>
              </a>
              <a href="https://www.youtube.com/playlist?list=PL1CI93sNrODNNJppF8HFcDKDHQVHLHN8v" target="_blank" rel="noopener" class="platform-pill bg-[#FF0000]/15 text-[#FF0000] hover:bg-[#FF0000]/25" aria-label="Watch on YouTube">
                <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                </svg>
              </a>
              <a href="/rss.xml" class="platform-pill bg-orange-500/15 text-orange-400 hover:bg-orange-500/25" aria-label="RSS Feed">
                <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M6.18 15.64a2.18 2.18 0 0 1 2.18 2.18C8.36 19 7.38 20 6.18 20C5 20 4 19 4 17.82a2.18 2.18 0 0 1 2.18-2.18M4 4.44A15.56 15.56 0 0 1 19.56 20h-2.83A12.73 12.73 0 0 0 4 7.27V4.44m0 5.66a9.9 9.9 0 0 1 9.9 9.9h-2.83A7.07 7.07 0 0 0 4 12.93V10.1z"/>
                </svg>
              </a>
            </div>
          </div>
          
          <a 
            href="/episodes" 
            class="text-[#8a8a8a] hover:text-white text-sm transition-colors"
            style="animation: fadeInUp 0.6s ease-out both; animation-delay: 0.5s;"
          >
            Browse all {allEpisodes.length} episodes →
          </a>
        </div>
      )}
    </div>
    
    <!-- Scroll indicator -->
    <div class="absolute bottom-6 left-1/2 -translate-x-1/2 z-10 hidden sm:block" style="animation: fadeInUp 0.6s ease-out both; animation-delay: 0.8s;">
      <div class="w-5 h-8 rounded-full border-2 border-white/20 flex justify-center pt-1.5">
        <div class="w-1 h-2 rounded-full bg-white/40 animate-bounce"></div>
      </div>
    </div>
  </section>

  <!-- ═══ Waveform Divider ═══ -->
  <div class="relative h-16 overflow-hidden">
    <svg class="absolute inset-0 w-full h-full" viewBox="0 0 1440 64" preserveAspectRatio="none">
      <path d="M0 32 Q120 8 240 32 Q360 56 480 32 Q600 8 720 32 Q840 56 960 32 Q1080 8 1200 32 Q1320 56 1440 32" stroke="#e63329" stroke-width="1.5" fill="none" opacity="0.15"/>
      <path d="M0 32 Q180 12 360 32 Q540 52 720 32 Q900 12 1080 32 Q1260 52 1440 32" stroke="#e63329" stroke-width="1" fill="none" opacity="0.08"/>
    </svg>
  </div>

  <!-- ═══ Recent Episodes ═══ -->
  <section class="py-16 sm:py-24">
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <div class="flex items-end justify-between mb-12">
        <div>
          <h2 class="font-[var(--font-display)] font-extrabold text-white text-3xl sm:text-4xl tracking-tight">Recent Episodes</h2>
          <p class="text-[#8a8a8a] mt-2">{allEpisodes.length} episodes and counting</p>
        </div>
        <a href="/episodes" class="text-[#e63329] hover:text-[#c42a22] text-sm font-semibold transition-colors hidden sm:inline-flex items-center gap-1">
          View All
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
        </a>
      </div>
      
      <div class="space-y-1">
        {recentEpisodes.map((episode, i) => (
          <EpisodeCard
            number={episode.data.number}
            title={episode.data.title}
            description={episode.data.description}
            date={episode.data.date}
            duration={episode.data.duration}
            slug={episode.id}
            guests={episode.data.guests}
            topics={episode.data.topics}
            index={i}
          />
        ))}
      </div>
      
      <div class="text-center mt-12 sm:hidden">
        <a href="/episodes" class="inline-flex items-center gap-2 px-6 py-3 bg-white/5 hover:bg-white/10 text-white rounded-full text-sm font-medium transition-colors">
          View All Episodes
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
        </a>
      </div>
    </div>
  </section>

</Layout>

<style>
  .platform-pill {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 9999px;
    transition: all 0.2s;
  }
  
  .noise-overlay::after {
    content: '';
    position: absolute;
    inset: 0;
    opacity: 0.03;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)' opacity='1'/%3E%3C/svg%3E");
    background-repeat: repeat;
    background-size: 256px 256px;
  }
</style>
